# Environment variables for Docker deployment
# Copy this file to .env and modify as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@tracking_data_db:5432/tracking_data
POSTGRES_DB=tracking_data
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Redis Configuration
REDIS_URL=redis://tracking_data_redis:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s

# Security Configuration
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Pipeline Configuration
PIPELINE_BATCH_SIZE=10
PIPELINE_RETRY_ATTEMPTS=3
PIPELINE_RETRY_DELAY=1.0

# SSI API Configuration
SSI_API_TIMEOUT=30
SSI_API_RETRY_ATTEMPTS=3
SSI_API_RETRY_DELAY=1.0
